# Dependabot Configuration Example
# Copy this file to .github/dependabot.yml to enable automated dependency updates
# Used in Phase 4 of the GHAS Workshop

version: 2

updates:
  # Node.js dependencies (npm)
  - package-ecosystem: "npm"
    directory: "/node-frontend"
    schedule:
      interval: "weekly"
      day: "monday"
      time: "09:00"
      timezone: "UTC"
    # Group all production dependencies into a single PR
    groups:
      production-dependencies:
        patterns:
          - "*"
        exclude-patterns:
          - "jest*"
          - "nodemon"
    # Limit the number of open PRs
    open-pull-requests-limit: 5
    # Add labels to PRs
    labels:
      - "dependencies"
      - "npm"
    # Customize commit message
    commit-message:
      prefix: "npm"
      include: "scope"

  # Python dependencies (pip)
  - package-ecosystem: "pip"
    directory: "/python-api"
    schedule:
      interval: "weekly"
      day: "monday"
      time: "09:00"
      timezone: "UTC"
    groups:
      python-dependencies:
        patterns:
          - "*"
    open-pull-requests-limit: 5
    labels:
      - "dependencies"
      - "python"
    commit-message:
      prefix: "pip"
      include: "scope"

  # Java dependencies (Maven)
  - package-ecosystem: "maven"
    directory: "/java-backend"
    schedule:
      interval: "monthly"
      day: "monday"
      time: "09:00"
      timezone: "UTC"
    groups:
      java-dependencies:
        patterns:
          - "*"
        exclude-patterns:
          - "org.springframework*"
      spring-framework:
        patterns:
          - "org.springframework*"
    open-pull-requests-limit: 5
    labels:
      - "dependencies"
      - "java"
    commit-message:
      prefix: "maven"
      include: "scope"

  # GitHub Actions
  - package-ecosystem: "github-actions"
    directory: "/"
    schedule:
      interval: "weekly"
    labels:
      - "dependencies"
      - "github-actions"
    commit-message:
      prefix: "actions"
