# Environment Variables Template
# Copy this file to .env and fill in your values
# NEVER commit .env with real credentials to version control

# ===========================================
# Database Configuration
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=workshop_db
DB_USER=your_username
DB_PASSWORD=your_secure_password_here

# Full connection string (alternative to individual vars)
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# ===========================================
# API Keys
# ===========================================
# Internal service API key
INTERNAL_API_KEY=your_api_key_here

# Analytics
ANALYTICS_ID=UA-XXXXXXXX-X

# ===========================================
# Application Settings
# ===========================================
# Set to false in production
DEBUG=false

# Secret key for session signing (generate a strong random value)
SECRET_KEY=generate_a_random_32_char_string_here

# JWT secret for token signing
JWT_SECRET=generate_another_random_string_here

# ===========================================
# SMTP Configuration
# ===========================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=notifications@example.com
SMTP_PASSWORD=your_email_password_here

# ===========================================
# Azure Configuration (if using Azure services)
# ===========================================
AZURE_TENANT_ID=your_tenant_id
AZURE_CLIENT_ID=your_client_id
AZURE_CLIENT_SECRET=your_client_secret

# For Azure Key Vault (recommended for production)
AZURE_KEYVAULT_URL=https://your-vault.vault.azure.net/

# ===========================================
# GitHub Configuration (for API access)
# ===========================================
GITHUB_TOKEN=your_github_pat_here

# ===========================================
# Production Recommendations
# ===========================================
# 1. Use a secrets manager (Azure Key Vault, AWS Secrets Manager, HashiCorp Vault)
# 2. Rotate secrets regularly
# 3. Use different credentials for each environment
# 4. Never log secrets or include them in error messages
# 5. Use least-privilege access for service accounts
